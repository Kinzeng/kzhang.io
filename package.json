{
  "name": "kzhang.io",
  "version": "1.0.0",
  "description": "My Personal Website",
  "author": "Kevin Zhang",
  "repository": "*",
  "main": "server/index.js",
  "scripts": {
    "start": "node bin",
    "monitor": "nodemon --ignore app/public/ --ignore app/client/ bin",
    "dev": "npm run monitor & webpack -d --watch --progress --colors --config webpack.config.js",
    "build": "webpack --config webpack.config.js -p",
    "deploy": "gcloud app deploy gcloud.yaml"
  },
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "morgan": "^1.7.0",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-router": "^2.5.2",
    "smoothscroll": "^0.3.0",
    "webpack": "^1.13.1"
  },
  "devDependencies": {
    "babel-jest": "^13.2.2",
    "jest-cli": "^13.2.3",
    "nodemon": "^1.9.2",
    "react-addons-test-utils": "^15.2.1"
  },
  "engines": {
    "node": ">=0.12.7"
  },
  "jest": {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-router/",
      "<rootDir>/node_modules/react-addons-test-utils/"
    ]
  }
}
